{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "typing",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es7"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "outDir": "lib",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "target": "es6",
    "types": [
      "node"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "./node_modules",
    "./src/*/node_modules"
  ]
}
